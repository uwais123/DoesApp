<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:layout_marginBottom="20dp"
    android:background="@drawable/bgcard">

    <LinearLayout
        android:layout_marginLeft="16dp"
        android:orientation="vertical"
        android:layout_width="220dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/titleDoes"
            android:layout_marginTop="19dp"
            android:textSize="22dp"
            android:textColor="#000C5D"
            android:text="Buy Whiskas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/descDoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:textColor="#ADADAD"
            android:text="Nearly market good to" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_marginLeft="45dp"
        android:layout_width="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/dateDoes"
            android:text="Tomorrow"
            android:textColor="#F63EA5"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>































